rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Orders collection - Allow customers to create and read their orders
    // Allow admins (authenticated users) to read and update all orders
    match /orders/{orderId} {
      // Allow anyone to create new orders (customers placing orders)
      allow create: if true;

      // Allow anyone to read orders (customers tracking their orders)
      allow read: if true;

      // Only authenticated users (admins) can update order status
      allow update: if request.auth != null;

      // Only authenticated users (admins) can delete orders
      allow delete: if request.auth != null;
    }

    // Menu items collection (if you add this in the future)
    match /menu/{itemId} {
      // Anyone can read menu items
      allow read: if true;

      // Only authenticated admins can write menu items
      allow write: if request.auth != null;
    }

    // Settings or configurations (for future use)
    match /settings/{settingId} {
      // Anyone can read settings
      allow read: if true;

      // Only authenticated admins can write settings
      allow write: if request.auth != null;
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
